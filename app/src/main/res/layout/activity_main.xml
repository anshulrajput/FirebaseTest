<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.anshulrajput.firebasetest.MainActivity">

    <RelativeLayout
        android:layout_width="330dp"
        android:layout_height="415dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"

        android:background="@drawable/formbg"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editText"
            android:layout_width="256dp"
            android:layout_height="61dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:background="@drawable/txtboxbg"
            android:ems="10"
            android:hint="Enter Your Email"
            android:inputType="textEmailAddress"
            android:letterSpacing="10dp"
            android:padding="20dp"
            android:textColor="#ffffff"
            android:textColorHint="#8AFFFFFF"
            android:textStyle="bold|italic" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="256dp"
            android:layout_height="65dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="149dp"
            android:background="@drawable/txtboxbg"
            android:ems="10"
            android:hint="Enter Your Password"
            android:inputType="textPassword"
            android:padding="20dp"
            android:textColor="#ffffff"
            android:textColorHint="#8AFFFFFF"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText2"
            android:layout_centerHorizontal="true"
            android:background="@mipmap/ic_illumina"
            android:text="Login"
            android:textColor="#778F97"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="35dp"
            android:background="@mipmap/ic_illumina"
            android:text="SignUp"
            android:textColor="#778F97"
            android:textStyle="bold|italic" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="145dp"
        android:layout_height="164dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        app:srcCompat="@mipmap/ic_launcher_foreground" />
</RelativeLayout>
